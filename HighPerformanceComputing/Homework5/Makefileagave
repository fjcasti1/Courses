#OBJs = createDebug.o libraryGKE.o knife_edge.o
OBJs = libraryGKE.o knife_edge.o
f90comp = ifort
switch = -O3 #-fpe0 -check all -check bounds -g#-diag-file-append=intel_build.log -fpe0

MKLLIB = -mkl=parallel -liomp5 -lpthread -axavx 
LIBPLP = -lplplotd -lplplotf77d -lplplotf77cd

# Makefile
.phony: clean

knife_edge: $(OBJs)
	module load intel/2018x; \
	rm -f *.dat; \
	$(f90comp) $(switch) -o knife_edge.out $(OBJs) $(MKLLIB)
%.o: %.f90
	module load intel/2018x; \
	$(f90comp) -c $(switch) $<
%.mod: %.o %.f90
	$(f90comp) -c $(switch) $<
clean:
	rm -f *.out
	rm -f *.log
	rm -f *.mod
	rm -f *.o
	rm -f *.log
	rm -f *.dat
	rm -f ts*
	rm -f Re*

# End of Makefile
